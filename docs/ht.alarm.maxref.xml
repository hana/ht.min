<c74object name='ht.alarm' category='utilities'>

	<digest>Bang when the time comes</digest>
	<description>Bang when the time comes. </description>


	<!--METADATA-->

	<metadatalist>
		<metadata name='author'>Hananosuke Takimoto </metadata>
		<metadata name='tag'>utilities</metadata>
	</metadatalist>


	<!--ARGUMENTS-->

	<objarglist>

		<objarg name='resolution' optional='1' type='float'>
			<digest>Timer resolution in ms</digest>
			<description>Timer resolution in ms. </description>
		</objarg>

	</objarglist>


	<!--MESSAGES-->

	<methodlist>

		<method name='set'>
			<digest>Set the time </digest>
			<description>Set the time </description>
		</method>

		<method name='check'>
			<digest>Check the current alarm setting</digest>
			<description>Check the current alarm setting. </description>
		</method>

		<method name='bang'>
			<digest>Update the internal clock in case the system clock changes</digest>
			<description>Update the internal clock in case the system clock changes. </description>
		</method>

	</methodlist>


	<!--ATTRIBUTES-->

	<attributelist>

		<attribute name='utc' get='1' set='1' type='long' size='1' >
			<digest>If true, the set value uses utc, otherwise local time </digest>
			<description>If true, the set value uses utc, otherwise local time </description>
		</attribute>

		<attribute name='resolution' get='1' set='1' type='float64' size='1' >
			<digest>Timer resolution, default 1ms </digest>
			<description>Timer resolution, default 1ms </description>
		</attribute>

	</attributelist>


	<!--RELATED-->

	<seealsolist>
		<seealso name='ht.alarm~' />
		<seealso name='date' />
		<seealso name='clocker' />
		<seealso name='timer' />
	</seealsolist>


</c74object>
